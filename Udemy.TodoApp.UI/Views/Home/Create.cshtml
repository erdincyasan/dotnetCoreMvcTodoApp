@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
@model WorkCreateDto
<div class="row justify-content-center">
        <div class="col-md-4">
            <form method="post" asp-action="Create">
           <div class="form-group">
               <label class="form-label" asp-for="Definition">
                   İş Tanımı
               </label>
               <input type="text" class="form-control" asp-for="Definition" />
            </div>
            <div class="form-group">
                    <label class="form-check-label" asp-for="IsCompleted">
                           İş Durumu
                    </label>
                    <input class="form-check-input" type="checkbox" asp-for="IsCompleted" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">KAYDET</button>
            </div>
            <div asp-validation-summary="All">

            </div>

            </form>
 
        </div>
</div>
